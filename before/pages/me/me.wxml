<view class="top-bg"></view>
<view class="box">
  <!-- 头像 -->
  <view class="head-box">
    <button class="avatar" bindtap="login">
      <image class="head-img" src="{{avatarUrl}}"  mode="widthFix"></image>
    </button>
    <view class="tip">{{nickName}}</view>
  </view>
  <!-- 第一部分列表 -->
  <view>
    <button class="row" style="width: 100%;" bindtap="basicClick">
      <view class="left">
        <icon class="icon-small" type="success" size="16"></icon>
        <text class="text">基本信息</text>
      </view>
      <view class="right"></view>
    </button>
    <button class="row" style="width: 100%;" bindtap="feedbackClick">
      <view class="left">
        <icon class="icon-small" type="success" size="16"></icon>
        <text class="text">匿名反馈</text>
      </view>
    </button>
    <button class="row" style="width: 100%;border-bottom: none;" bindtap="aboutClick">
      <view class="left">
        <icon class="icon-small" type="success" size="16"></icon>
        <text class="text">关于我们</text>
      </view>
    </button>
  </view>
</view>
<!-- 第二部分列表 -->
<view class="end">
  <button open-type="share" class="row" style="width: 100%;">
    <view class="left">
      <view class="iconfont icon-fenxiang"></view>
      <text class="text">分享好友</text>
    </view>
  </button>
  <button open-type="contact" class="row" style="width: 100%;border-bottom: none;">
    <view class="left">
      <view class="iconfont icon-rengongkefu"></view>
      <text class="text">在线客服</text>
    </view>
  </button>
</view>
<!-- 第三部分列表 -->
<view class="end" bindtap="logout">
  <button class="row"  style="width: 100%;border-bottom: none;">
    <view class="left">
      <view class="iconfont icon-tuichu"></view>
      <text class="text">退出登录</text>
    </view>
  </button>
</view>
